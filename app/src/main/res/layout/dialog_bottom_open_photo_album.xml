<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mCancelTv"
        android:layout_width="0pt"
        android:layout_height="@dimen/dimen_60x"
        android:background="#ffffff"
        android:gravity="center"
        android:text="取消"
        android:textColor="#111111"
        android:textSize="@dimen/dimen_16x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="0pt"
        android:layout_height="@dimen/dimen_8x"
        android:background="#F8F8FA"
        app:layout_constraintBottom_toTopOf="@+id/mCancelTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/mAlbumTv"
        android:layout_width="0pt"
        android:layout_height="@dimen/dimen_60x"
        android:background="#ffffff"
        android:gravity="center"
        android:text="从手机相册选择"
        android:textColor="#111111"
        android:textSize="@dimen/dimen_16x"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="0pt"
        android:layout_height="@dimen/dimen_1x"
        android:background="#F8F8FA"
        app:layout_constraintBottom_toTopOf="@+id/mAlbumTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/mTakePhotosTv"
        android:layout_width="0pt"
        android:layout_height="@dimen/dimen_60x"
        android:background="@drawable/bg_day_recommend_1"
        android:gravity="center"
        android:text="拍照"
        android:textColor="#111111"
        android:textSize="@dimen/dimen_16x"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>