<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="240pt"
        android:layout_height="348pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="240pt"
            android:layout_height="314pt"
            android:layout_marginTop="34pt"
            android:background="@drawable/ic_pup_img_bg"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv01"
            android:layout_width="50pt"
            android:layout_height="34pt"
            android:background="@drawable/icon_dialog_top2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvContent1"
            android:layout_width="192pt"
            android:layout_height="wrap_content"
            android:layout_marginTop="18pt"
            android:gravity="center"
            android:text="公告"
            android:textColor="#57493B"
            android:textSize="18pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv01" />


        <com.sn.gameelectricity.app.weight.customview.emoji.EmojiconEditText
            android:id="@+id/tvContent"
            android:layout_width="192pt"
            android:layout_height="180pt"
            android:layout_marginTop="8pt"
            android:background="@color/transparent"
            android:gravity="center|top"
            android:hint="Amet minim mollit non desernt nostrud amet."
            android:maxHeight="65pt"
            android:textColor="#57493B"
            android:textColorHint="#57493B"
            android:textSize="13pt"
            app:emojiconSize="14pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvContent1" />

        <Button
            android:id="@+id/btnSure"
            android:layout_width="140pt"
            android:layout_height="40pt"
            android:layout_marginTop="12pt"
            android:background="@drawable/shape_radius_fdede4_5"
            android:text="我知道了"
            android:textColor="#EF874E"
            android:textSize="14pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvContent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>