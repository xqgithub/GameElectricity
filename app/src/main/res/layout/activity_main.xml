<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="0pt"
        android:layout_height="0pt"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@+id/navigationLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.sn.gameelectricity.app.weight.customview.MainNavigationLayout
        android:id="@+id/navigationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <!-- pag动画集合 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_pag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">
        <!-- 云 -->
        <RelativeLayout
            android:id="@+id/rl_pag_cloud"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- 工作中 -->
        <RelativeLayout
            android:id="@+id/rl_pag_working"
            android:layout_width="@dimen/dimen_200x"
            android:layout_height="@dimen/dimen_200x"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

