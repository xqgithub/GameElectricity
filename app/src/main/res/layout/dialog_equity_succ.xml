<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="240pt"
        android:layout_height="279pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_width="240pt"
            android:layout_height="184pt"
            android:layout_marginTop="84pt"
            android:background="@drawable/ic_pup_img_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv01"
            android:layout_width="124pt"
            android:layout_height="124pt"
            android:background="@drawable/ic_rewardsucc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvContent1"
            android:layout_width="192pt"
            android:layout_height="wrap_content"
            android:layout_marginTop="18pt"
            android:gravity="center"
            android:text="兑换成功"
            android:textColor="#57493B"
            android:textSize="18pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv01" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="192pt"
            android:layout_height="wrap_content"
            android:layout_marginTop="8pt"
            android:gravity="center"
            android:text="已为您保存至权益中心"
            android:textColor="#57493B"
            android:textSize="13pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvContent1" />

        <Button
            android:id="@+id/btnSee"
            android:layout_width="90pt"
            android:layout_height="40pt"
            android:layout_marginLeft="24pt"
            android:layout_marginBottom="24pt"
            android:background="@drawable/shape_radius_f7f9fe_3"
            android:text="查看"
            android:textColor="#A1A7AF"
            android:textSize="14pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnSure"
            android:layout_width="90pt"
            android:layout_height="40pt"
            android:layout_marginLeft="12pt"
            android:layout_marginBottom="24pt"
            android:background="@drawable/shape_radius_f19b3f"
            android:text="继续兑换"
            android:textColor="#FFFFFF"
            android:textSize="14pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnSee" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>