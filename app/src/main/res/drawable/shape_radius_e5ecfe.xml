<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 填充的颜色 -->
    <gradient
        android:angle="0"
        android:endColor="#e5ecfe"
        android:startColor="#e5ecfe"
        android:type="linear" />

    <!-- android:radius 圆角的半径 -->
    <corners android:radius="39pt" />
    <padding
        android:bottom="3pt"
        android:left="3pt"
        android:right="3pt"
        android:top="3pt" />
    <stroke
        android:width="0.5pt"
        android:color="#ffffff" />


</shape>