<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--默认颜色-->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#ECF0F8" />
            <corners android:radius="39pt" />
        </shape>
    </item>
    <!--进度颜色-->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="0"
                    android:endColor="#ED7A57"
                    android:startColor="#F19B3F"
                    android:type="linear" />
                <corners android:radius="39pt" />
            </shape>
        </clip>
    </item>
</layer-list>