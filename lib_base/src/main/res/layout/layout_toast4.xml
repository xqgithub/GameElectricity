<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/design_default_color_primary"
    android:paddingHorizontal="@dimen/dimen_16x"
    android:paddingVertical="@dimen/dimen_12x">


    <TextView
        android:id="@+id/tv_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获得"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/dimen_14x"
        app:layout_constraintBottom_toBottomOf="@+id/iv_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_icon" />


    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dimen_24x"
        android:layout_height="@dimen/dimen_24x"
        android:layout_marginStart="@dimen/dimen_10x"
        android:src="@drawable/ge_toast_success"
        app:layout_constraintStart_toEndOf="@+id/tv_introduce"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_5x"
        android:text="x30"
        android:textColor="#FFB249"
        android:textSize="@dimen/dimen_14x"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_icon"
        app:layout_constraintStart_toEndOf="@+id/iv_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_icon" />

    <ImageView
        android:id="@+id/iv_icon2"
        android:layout_width="@dimen/dimen_24x"
        android:layout_height="@dimen/dimen_24x"
        android:layout_marginStart="@dimen/dimen_10x"
        android:src="@drawable/ge_toast_success"
        app:layout_constraintBottom_toBottomOf="@+id/iv_icon"
        app:layout_constraintStart_toEndOf="@+id/tv_num"
        app:layout_constraintTop_toTopOf="@+id/iv_icon" />

    <TextView
        android:id="@+id/tv_num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_5x"
        android:text="+20"
        android:textColor="#FFB249"
        android:textSize="@dimen/dimen_14x"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_icon"
        app:layout_constraintStart_toEndOf="@+id/iv_icon2"
        app:layout_constraintTop_toTopOf="@+id/iv_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>